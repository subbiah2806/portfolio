  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.67.0",
    "@hookform/resolvers": "5.2.2",
    "@subbiah/reusable": "github:subbiah2806/component#2e8aa6621243c42aed6cc55c1dfc4c63583a464c",
    "framer-motion": "12.23.24",
    "lucide-react": "0.546.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "10.1.0",
    "react-router-dom": "7.9.4",
    "react-hook-form": "7.65.0",
    "react-syntax-highlighter": "15.6.6",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/node": "24.9.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/react-syntax-highlighter": "15.5.13",
    "@vitejs/plugin-react": "4.3.0",
    "autoprefixer": "10.4.19",
    "lint-staged": "16.2.4",
    "postcss": "8.4.38",
    "rollup-plugin-visualizer": "6.0.5",
    "tailwindcss": "3.4.3",
    "typescript": "5.9.3",
    "vite": "5.2.11"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  }
}
