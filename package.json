{
  "name": "portfolio",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "analyze": "ANALYZE=true vite build && open dist/stats.html",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "reset": "rm -rf ./nodemodules && rm -rf package-lock.json",
